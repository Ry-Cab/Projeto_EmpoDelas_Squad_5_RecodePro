@model empodelas.Models.ProdutoServico

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar um novo produto/serviço</h1>

<h4>Produto ou Servico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Código:</label>
                <input asp-for="Codigo_produtoServico" class="form-control" />
                <span asp-validation-for="Codigo_produtoServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo:</label>
                <select asp-for="Tipo_produtoServico">
                    <option>Selecione</option>
                    <option>Produto</option>
                    <option>Serviço</option>
                </select>
                <span asp-validation-for="Tipo_produtoServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nome:</label>
                <input asp-for="Nome_produtoServico" class="form-control" />
                <span asp-validation-for="Nome_produtoServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descrição:</label>
                <input asp-for="Descricao_produtoServico" class="form-control" />
                <span asp-validation-for="Descricao_produtoServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Preço:</label>
                <input asp-for="Preco_produtoServico" class="form-control" />
                <span asp-validation-for="Preco_produtoServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nome do negócio:</label>
                <input asp-for="NomeNegocio_autonoma" class="form-control" />
                <span asp-validation-for="NomeNegocio_autonoma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volte para lista de produtos/serviços</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
