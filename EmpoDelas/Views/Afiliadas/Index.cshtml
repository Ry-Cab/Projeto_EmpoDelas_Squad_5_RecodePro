@model IEnumerable<empodelas.Models.Afiliada>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crie um novo</a>
</p>
<table class="table">
    
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasc_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTelefone_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep_afiliada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao_afiliada)
            </td>
            @if (item.ComprovanteResid_afiliada == null)
            {

                <td>
                    <span class="badge badge-danger">Comprovante não registrado</span>

                </td>
            }
            else
            {
                <td>
                    <span class="badge badge-success">Comprovante registrado</span>

                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_afiliada">Edita</a> |
                <a asp-action="Details" asp-route-id="@item.Id_afiliada">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_afiliada">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
