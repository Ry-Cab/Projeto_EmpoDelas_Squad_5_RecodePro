@model empodelas.Models.Afiliada

@{
    ViewData["Title"] = "Create";
}

<h1>Crie sua conta</h1>

<h4>Afiliada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_afiliada" class="control-label">Nome</label>
                <input asp-for="Nome_afiliada" class="form-control" />
                <span asp-validation-for="Nome_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome_afiliada" class="control-label">Sobrenome</label>
                <input asp-for="Sobrenome_afiliada" class="form-control" />
                <span asp-validation-for="Sobrenome_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_afiliada" class="control-label">E-mail</label>
                <input asp-for="Email_afiliada" class="form-control" />
                <span asp-validation-for="Email_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNasc_afiliada" class="control-label">Data de nascimento</label>
                <input asp-for="DataNasc_afiliada" class="form-control" />
                <span asp-validation-for="DataNasc_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumTelefone_afiliada" class="control-label">Número de telefone</label>
                <input asp-for="NumTelefone_afiliada" class="form-control" />
                <span asp-validation-for="NumTelefone_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco_afiliada" class="control-label">Endereço</label>
                <input asp-for="Endereco_afiliada" class="form-control" />
                <span asp-validation-for="Endereco_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep_afiliada" class="control-label">Cep</label>
                <input asp-for="Cep_afiliada" class="form-control" />
                <span asp-validation-for="Cep_afiliada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_afiliada" class="control-label">Descrição</label>
                <input asp-for="Descricao_afiliada" class="form-control" />
                <span asp-validation-for="Descricao_afiliada" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Criar"  class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
